rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /courses/{course} {
      allow read: if request.auth != null
    }
    match /lessons/{lesson} {
      allow read: if request.auth != null
    }
    match /users/{userId} {
    allow create;
    allow get, update, delete: if request.auth != null && request.auth.uid == userId;
    }
    match /usersCourseProgress/{userId} {
    allow create;
    allow get, update, delete: if request.auth != null && request.auth.uid == userId;
    }
    match /usersLessonProgress/{userId} {
    allow create: if request.auth != null;
    allow get, update, delete: if request.auth != null;
    }
    match /question/{question} {
    allow get: if request.auth != null;
    }
  }
}